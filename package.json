{
  "private": true,
  "workspaces": [
    "api",
    "story-generator",
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build:api && npm run build:app",
    "build:api": "tsc -b api",
    "build:app": "cd story-generator && npm run build",
    "build:verify": "[ -f story-generator/dist/story-generator/browser/index.html ] || (echo 'Missing build output' && exit 1)",
    "build:full": "npm run build && npm run build:verify"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.2"
  }
}
