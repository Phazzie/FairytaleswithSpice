@Component({
  selector: 'app-root',
  imports: [FormsModule, CommonModule, ErrorDisplayComponent, DebugPanel],
  templateUrl: './app.html',
  styleUrl: './app.css'
})
export class App implements OnInit, OnDestroy {
  @ViewChild('debugPanel') debugPanel!: DebugPanel;

  // Form state
  selectedCreature: CreatureType = 'vampire';
  selectedThemes: Set<ThemeType> = new Set();
  userInput: string = '';
  spicyLevel: SpicyLevel = 3;
  wordCount: WordCount = 700;

  // UI state flags
  isGenerating: boolean = false;
  isConvertingAudio: boolean = false;
  isSaving: boolean = false;
  isGeneratingNext: boolean = false;

  // Current story data
  currentStory: string = '';
  currentStoryRaw: string = '';
  currentStoryId: string = '';
  currentStoryTitle: string = '';
  currentStoryThemes: ThemeType[] = [];
  currentStorySpicyLevel: SpicyLevel = 1;
  currentChapterCount: number = 1;

  // Audio state
  audioProgress: number = 0;
  currentAudioUrl: string = '';
  currentAudioDuration: number = 0;

  // Success flags for user feedback
  saveSuccess: boolean = false;
  audioSuccess: boolean = false;

  // Options data
  creatures = [
    { value: 'vampire', label: 'ğŸ§› Vampire' },
    { value: 'werewolf', label: 'ğŸº Werewolf' },
    { value: 'fairy', label: 'ğŸ§š Fairy' }
  ];

  themes = [
    { value: 'betrayal', label: 'ğŸ—¡ï¸ Betrayal' },
    { value: 'obsession', label: 'ğŸ–¤ Obsession' },
    { value: 'power_dynamics', label: 'âš¡ Power Dynamics' },
    { value: 'forbidden_love', label: 'ğŸš« Forbidden Love' },
    { value: 'revenge', label: 'ğŸ’€ Revenge' },
    { value: 'manipulation', label: 'ğŸ•·ï¸ Manipulation' },
    { value: 'seduction', label: 'ğŸ’‹ Seduction' },
    { value: 'dark_secrets', label: 'ğŸ” Dark Secrets' },
    { value: 'corruption', label: 'ğŸŒ‘ Corruption' },
    { value: 'dominance', label: 'ğŸ‘‘ Dominance' },
    { value: 'submission', label: 'â›“ï¸ Submission' },
    { value: 'jealousy', label: 'ğŸ’š Jealousy' },
    { value: 'temptation', label: 'ğŸ Temptation' },
    { value: 'sin', label: 'ğŸ˜ˆ Sin' },
    { value: 'desire', label: 'ğŸ”¥ Desire' },
    { value: 'passion', label: 'â¤ï¸â€ğŸ”¥ Passion' },
    { value: 'lust', label: 'ğŸ’¦ Lust' },
    { value: 'deceit', label: 'ğŸ­ Deceit' }
  ];

  spicyLevelLabels = ['Mild', 'Warm', 'Hot', 'Spicy', 'Fire ğŸ”¥'];

  wordCountOptions = [
    { value: 700, label: '700 words' },
