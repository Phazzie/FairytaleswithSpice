{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "../dist/api",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "composite": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../packages/contracts" }
  ]
}